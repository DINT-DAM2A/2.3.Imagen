        <TextBlock HorizontalAlignment="Left" Margin="639,219,0,0" TextWrapping="Wrap" Text="Ajuste" VerticalAlignment="Top" FontSize="22" FontWeight="Bold" Height="30"/>
        <RadioButton Checked="AjusteRelleno_Cheched" Content="Relleno (Fill)" GroupName="Ajuste" IsChecked="True" HorizontalAlignment="Left" Margin="639,263,0,0" VerticalAlignment="Top"/>
        <RadioButton Checked="AjusteUniforme_Cheched" Content="Uniforme (Uniform)" GroupName="Ajuste" HorizontalAlignment="Left" Margin="639,293,0,0" VerticalAlignment="Top"/>
        <RadioButton Checked="AjusteRellenoUniforme_Cheched" Content="Relleno Uniforme (UniformToFill)" GroupName="Ajuste" HorizontalAlignment="Left" Margin="639,324,0,0" VerticalAlignment="Top"/>
        <RadioButton Checked="AjusteNone_Cheched" Content="Sin ajuste (None)" GroupName="Ajuste" HorizontalAlignment="Left" Margin="639,354,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
